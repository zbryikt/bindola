//- module
doctype html
- var navbar = true
- var debug = false
- var version = "0"
- var thumbnail = "thumbnail.png"
- var thumbtype = "image/png"
- var thumb_width = "1200"
- var thumb_height = "630"
- var favicon = "/assets/img/favicon.png"
- var title = "Your awesome title"
- var description = "Your awesome description"
- var rootid = ""
- var rootclass = ""
html(lang="en")
  include /module/mixin/index.jade
  block vars
  head(prefix="og: http://ogp.me/ns#")
    include /module/head.jade
    +css("/css/index.css")
    block head
    +script("/js/global.js")
    +script("/js/pack/base.js")
  body(id=rootid,class=rootclass)
    if navbar
      include /nav.jade
    include /auth/panel.jade
    #notifications
      .notify(ng-repeat="n in notifications",ng-class="'notify-'+n.type",ng-cloak) {{n.message}}
    block body
    if !debug
      include /module/ga.jade
      include /module/facebook.jade
